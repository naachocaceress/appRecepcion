<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MesasJuegos" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="&lt;  Juegos y Llaveros"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <com.example.vidon1.Mesas
        android:id="@+id/Mesas02"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/mesas1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="66dp" />

    <com.example.vidon1.Mesas
        android:id="@+id/mesas1"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:layout_marginRight="36dp"
        android:layout_marginTop="40dp" />

    <com.example.vidon1.Mesas
        android:id="@+id/Mesas01"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/mesas1"
        android:layout_below="@+id/Mesas02"
        android:layout_marginTop="67dp" />

</RelativeLayout>